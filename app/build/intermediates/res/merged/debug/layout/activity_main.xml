<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/myWG"
          android:text="myWG"
       />
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/einkaufsliste"
          android:text="Einkaufsliste"
       />
   </LinearLayout>

   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/blackboard"
          android:text="Blackboard"
          />
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/putzplan"
          android:text="Putzplan"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/kalender"
          android:text="Kalender"
       />
      <Button
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/einstellungen"

       />
   </LinearLayout>



</LinearLayout>