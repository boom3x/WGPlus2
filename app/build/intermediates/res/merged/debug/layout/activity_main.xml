<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >


   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/einkaufsliste_button"
          android:text="myWG"
          android:src="@drawable/ic_shopping_cart_black_24dp"
          />
      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/finanzen_button"
          android:text="finanzen"
          android:src="@drawable/ic_monetization_on_black_24dp"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/blackboard_button"
          android:text="blackboard_button"
          android:src="@drawable/ic_add_a_photo_black_24dp"


          />
      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/putzplan_button"
          android:text="putzplan_button"
          android:src="@drawable/ic_brush_black_24dp"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/kalender_button"
          android:text="kalender_button"
          android:src="@drawable/ic_event_available_black_24dp"
          />
      <ImageButton
          android:layout_height="match_parent"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:id="@+id/einstellungen_button"
          android:text="settings_button"
          android:src="@drawable/ic_settings_black_24dp"

          />
   </LinearLayout>





</LinearLayout>